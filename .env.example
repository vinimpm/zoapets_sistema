# ============================================
# Zoa Pets - Environment Variables
# ============================================
# Copie este arquivo para .env e preencha os valores

# ============================================
# DATABASE
# ============================================
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=zoapets_dev
DATABASE_USER=postgres
DATABASE_PASSWORD=postgres123

# URL de conexão completa (alternativa)
DATABASE_URL=postgresql://postgres:postgres123@localhost:5432/zoapets_dev

# ============================================
# REDIS
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_URL=redis://localhost:6379

# ============================================
# MINIO / S3
# ============================================
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
MINIO_USE_SSL=false
MINIO_BUCKET=zoapets

# Para produção (AWS S3)
# AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key
# S3_BUCKET=zoapets-prod

# ============================================
# JWT
# ============================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_REFRESH_EXPIRES_IN=7d

# ============================================
# APPLICATION
# ============================================
NODE_ENV=development
PORT=3000
API_URL=http://localhost:3000
WEB_URL=http://localhost:3001

# ============================================
# CORS
# ============================================
CORS_ORIGIN=http://localhost:3001,http://localhost:3002

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# ============================================
# EMAIL (SendGrid)
# ============================================
SENDGRID_API_KEY=
SENDGRID_FROM_EMAIL=noreply@zoapets.com
SENDGRID_FROM_NAME=Zoa Pets

# ============================================
# SMS (Twilio)
# ============================================
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# ============================================
# WHATSAPP (WhatsApp Business API)
# ============================================
WHATSAPP_API_URL=
WHATSAPP_API_KEY=
WHATSAPP_PHONE_NUMBER_ID=

# ============================================
# PAGAMENTOS (Stripe)
# ============================================
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
STRIPE_PUBLISHABLE_KEY=

# PAGAMENTOS (Mercado Pago)
MERCADOPAGO_ACCESS_TOKEN=
MERCADOPAGO_PUBLIC_KEY=

# ============================================
# NOTA FISCAL (Focus NFe)
# ============================================
FOCUS_NFE_TOKEN=
FOCUS_NFE_ENV=homologacao

# ============================================
# MONITORING
# ============================================
SENTRY_DSN=
SENTRY_ENVIRONMENT=development

# ============================================
# DICOM/PACS (Orthanc)
# ============================================
ORTHANC_URL=http://localhost:8042
ORTHANC_USERNAME=orthanc
ORTHANC_PASSWORD=orthanc

# ============================================
# LOGS
# ============================================
LOG_LEVEL=debug
LOG_FORMAT=json

# ============================================
# FRONTEND (Next.js)
# ============================================
NEXT_PUBLIC_API_URL=http://localhost:3000
NEXT_PUBLIC_WS_URL=ws://localhost:3000
NEXT_PUBLIC_SENTRY_DSN=

# ============================================
# MOBILE (Expo)
# ============================================
EXPO_PUBLIC_API_URL=http://localhost:3000
EXPO_PUBLIC_WS_URL=ws://localhost:3000
